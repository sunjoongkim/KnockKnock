<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:id="@+id/toppanel"
            android:layout_width="410dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2315"
                style="@style/MyTextViewStyle6"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="1.5dp"
                android:layout_marginLeft="170dp"
                android:text="문의"
                android:textColor="#434343" />
        </LinearLayout>


        <!-- 스크롤뷰 안에는 오직 1개의 View만 추가가 가능함 -->
        <!-- 여러 개를 추가하려면 안에 Layout 같은 ViewGroup을 놓고 그 안에 View들을 추가해야함 -->
        <ScrollView
            android:id="@+id/customScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 스크롤뷰 안에 있는 View의 height은 값을 어떻게 지정하던지 무조건 wrap_content로 됨 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/view4"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.818" />
                <TextView
                    android:id="@+id/textView235"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="문의작성"
                    style="@style/MyTextViewStyle6" />
                <TextView
                    android:id="@+id/textView236"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="궁금하신 사항은 아래 정보작성을 하여 제출 해 주시길바랍니다."
                    style="@style/MyTextViewStyle3" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="410dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.818" />
                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/MyTextViewStyle6"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:text="성명" />


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="성함을 입력하세요."
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.564"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.071" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="410dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.818" />
                <TextView
                    android:id="@+id/call"
                    style="@style/MyTextViewStyle6"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:text="연락처" />
                <EditText
                    android:id="@+id/et_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="답변받을 연락처를 입력하세요."
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.564"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.071" />



                <View
                    android:id="@+id/view8"
                    android:layout_width="410dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.818" />
                <TextView
                    android:id="@+id/contents"
                    style="@style/MyTextViewStyle6"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="문의제목" />
                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="문의 제목을 입력하세요"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.564"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.071" />

                <View
                    android:id="@+id/view9"
                    android:layout_width="410dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.818" />
                <TextView
                    android:id="@+id/content"
                    style="@style/MyTextViewStyle6"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:text="문의내용" />
                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_weight="1"
                    android:hint="문의 내용을 작성하세요"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.564"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.071" />

                <View
                    android:id="@+id/view92"
                    android:layout_width="410dp"
                    android:layout_height="35dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.818" />

                <Button
                    android:id="@+id/btn_commit1"
                    android:layout_width="361dp"
                    android:layout_height="60dp"
                    android:text="작성완료"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.56"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.42"
                    />








                <!-- 문의내역, 고객센터 이미지 아이콘 -->













            </LinearLayout>
        </ScrollView>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>